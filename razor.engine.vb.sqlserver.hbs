.
                'WHERE
                If Where._Text.Count > 0 Then
                    zSQL = zSQL & "WHERE" & Space(1) & String.Join(" ", Where._Text) & Space(1)
                End If
.
                'ORDER BY
                If _OrderBy.Count > 0 Then
